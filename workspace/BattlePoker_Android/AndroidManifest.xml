<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.battlepoker_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.battlepoker_android.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.battlepoker_android.activities.MapActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name=".activity_map" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.battlepoker_android.activities.BattleActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name=".activity_battle" />
            </intent-filter>
        </activity>
    </application>

</manifest>